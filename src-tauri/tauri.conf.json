{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "e2e-seo-desktop",
  "version": "1.0.0",
  "identifier": "com.e2e-seo.desktop",
  "build": {
    "frontendDist": "../desktop-app/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cd desktop-app && npm run dev",
    "beforeBuildCommand": "cd desktop-app && npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "E2E SEO Checker",
        "width": 1200,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
