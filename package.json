{
  "name": "e2e-seo",
  "version": "1.0.0",
  "description": "e2e seo testing kit for websites",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "example": "npm run build && node examples/basic-usage.js",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "seo",
    "e2e",
    "testing",
    "playwright",
    "web",
    "automation",
    "checker",
    "lighthouse",
    "performance",
    "meta-tags"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
